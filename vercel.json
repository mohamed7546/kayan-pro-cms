{
    "version": 2,
    "builds": [
        {
            "src": "api/index.py",
            "use": "@vercel/python"
        },
        {
            "src": "public/**",
            "use": "@vercel/static"
        },
        {
            "src": "admin/**",
            "use": "@vercel/static"
        }
    ],
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api/index.py"
        },
        {
            "source": "/calculator",
            "destination": "/public/calculator.html"
        },
        {
            "source": "/admin",
            "destination": "/admin/index.html"
        },
        {
            "source": "/admin/((?!.*\\..*).*)",
            "destination": "/admin/index.html"
        },
        {
            "source": "/((?!api/|admin|calculator|.*\\..*).*)",
            "destination": "/public/index.html"
        },
        {
            "source": "/",
            "destination": "/public/index.html"
        }
    ]
}